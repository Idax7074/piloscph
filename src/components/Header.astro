---
import Logo from "./Logo.astro";
---

<header class="banner">
  <div class="logo">
    <Logo />
  </div>
  <nav class="menu">
    <button class="toggle-btn" aria-label="Burgermenu">
      <span class="bar1"></span>
      <span class="bar2"></span>
      <span class="bar3"></span>
    </button>
    <ul>
      <li><a href="/om">Om Pilos</a></li>
      <li>
        <a href="/kategori">Shop</a>
        <ul id="submenu">
          <li><a href="/category/mugs">Mugs</a></li>
          <li><a href="/category/bowl">Bowls</a></li>
          <li><a href="#">Vase</a></li>
          <li><a href="#">Washing</a></li>
          <li><a href="#">Squeezer</a></li>
        </ul>
      </li>
      <li><a href="/kursus">Kurser</a></li>
      <li><a href="/kontakt">Kontakt</a></li>
    </ul>
    <ul class="shopMenu">
      <li><i class="fas fa-user"></i></li>
      <li><i class="fas fa-shopping-basket"></i></li>
    </ul>
  </nav>
  <ul class="shop">
    <li><i class="fas fa-user"></i></li>
    <li><i class="fas fa-shopping-basket"></i></li>
  </ul>
</header>

<script src="../scripts/burger.js"></script>

<style>
  header {
    top: 0;
    width: 100%;
    background-image: linear-gradient(#d0c7be 25%, 75%, transparent);
    padding: 20px;
    z-index: 4;

    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .shop a {
    color: var(--dark-brown);
  }

  .shop a:hover {
    color: var(--black);
  }

  img {
    width: 25%;
    height: auto;
  }

  .toggle-btn {
    background: transparent;
    border: none;
    cursor: pointer;
    display: none;
    min-width: 44px;
    min-height: 44px;
  }

  .shop {
    display: flex;
    align-items: center;
  }

  .shop li {
    padding-inline: 20px;
    list-style: none;
  }

  @media (min-width: 1201px) {
    header {
      position: fixed;
    }

    .logo {
      padding-left: 7%;
    }
    #submenu {
      left: -30px;
      opacity: 0;
      position: absolute;
      top: 45px;
      visibility: hidden;
      z-index: 1;

      display: flex;
      flex-direction: column;
    }

    li:hover ul#submenu {
      opacity: 1;
      top: 60px;
      visibility: visible;
    }

    #submenu li {
      float: none;
      width: 100%;
    }

    #submenu a {
      background-color: #f3f0ec;
      color: var(--dark-brown);

      display: flex;
      justify-content: center;
    }

    #submenu a:hover {
      color: var(--black);
    }

    nav {
      width: 100%;
      display: flex;
      justify-content: center;
    }

    nav ul {
      list-style: none;
      display: flex;
      flex-direction: row;
    }

    nav li {
      float: left;
      position: relative;
      width: auto;
    }

    nav li:hover a {
      color: var(--black);
    }

    nav a {
      color: var(--dark-brown);
      display: block;
      padding: 15px 70px;
      transition: all 0.25s ease;
    }

    nav a:active {
      color: var(--black);
    }

    .shop {
      display: flex;
      align-items: center;

      padding-right: 7%;
    }

    .shop li {
      padding-inline: 20px;
      list-style: none;
    }

    .shop li {
      color: var(--black);
      cursor: pointer;
    }

    .shop li:hover {
      cursor: pointer;
    }

    .shopMenu {
      display: none;
    }
  }

  @media (max-width: 1200px) {
    .shop {
      display: none;
    }

    .shopMenu li {
      color: var(--black);
      cursor: pointer;
    }

    .shopMenu li:hover {
      cursor: pointer;
    }
    .banner {
      background-color: #d0c7be;
      padding: 2rem;

      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      align-items: center;
      gap: 20px 40px;
    }

    #submenu {
      margin-left: 15px;
    }
    .menu.shown a {
      color: var(--dark-brown);
      text-decoration: none;
      line-height: 1.5rem;
    }

    .menu.shown a:hover {
      color: var(--black);
    }

    .toggle-btn {
      display: block;
    }

    .toggle-btn span {
      display: block;
    }

    .menu.shown {
      display: contents;
    }

    .menu ul {
      display: none;
    }

    .menu.shown > ul {
      border-top: 1px solid var(--black);
      padding-top: 1rem;
    }

    .menu.shown ul {
      display: flex;
      flex-flow: column;
      flex-basis: 100%;
      list-style: none;
      gap: 12px;
      font-size: 1.2rem;
    }
    .bar1,
    .bar2,
    .bar3 {
      width: 35px;
      height: 5px;
      background-color: var(--black);
      margin: 6px 0;
      border-radius: 5px;
      transition: 0.4s;
    }

    .change .bar1 {
      transform: translate(0, 11px) rotate(-45deg);
    }

    .change .bar2 {
      opacity: 0;
    }

    .change .bar3 {
      transform: translate(0, -11px) rotate(45deg);
    }
  }

  @media (max-width: 500px) {
    .banner {
      padding-block: 1rem;
      padding-inline: 0.1rem;
    }
  }
</style>
