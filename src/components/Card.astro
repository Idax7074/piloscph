---
//Props er en stedholder for vores ting fra databasen
const { image, name, price, slug } = Astro.props;
---

<a href={`../../produkt/${slug}`}>
  <article>
    <img src={image} alt="Produktbillede" />
    <div>
      <h2>{name}</h2>
      <p>{price} DKK</p>
    </div>
  </article>
</a>

<style>
  article {
    display: flex;
    flex-direction: column;
  }

  article img {
    width: 100%;
    height: 100%;
    display: block;
  }

  article img:hover {
    filter: grayscale(100);
  }

  a h2 {
    font-size: var(--font-small);
    font-family: "NeueHaasLight", sans-serif;
    letter-spacing: 0;
    font-weight: 500;
  }

  a p {
    font-size: var(--font-small);
    font-family: "NeueHaasLight", sans-serif;
    font-weight: 500;
  }

  a {
    color: var(--dark-brown);
  }

  @media (max-width: 400px) {
    a h2 {
      font-size: var(--font-smaller);
    }

    a p {
      font-size: var(--font-smaller);
    }
  }
</style>
